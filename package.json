{
    "name": "ts-pwa-boilerplate",
    "version": "1.0.0",
    "description": "Boilerplate for PWA application.",
    "main": "index.js",
    "scripts": {
        "test": "./node_modules/.bin/jest",
        "test:watch": "./node_modules/.bin/jest --watchAll",
        "test:coverage": "./node_modules/.bin/jest --coverage",
        "build:prod": "webpack --config webpack/config/prod.config.js",
        "build:dev": "webpack --config webpack/config/dev.config.js",
        "start": "webpack-dev-server --config webpack/config/dev.config.js --open",
        "start:remote": "webpack-dev-server --config webpack/config/dev_remote.config.js --open"
    },
    "author": "Milosz Szewczyk",
    "license": "MIT",
    "devDependencies": {
        "@types/enzyme": "^3.10.3",
        "@types/jest": "^24.0.19",
        "@types/loadable__component": "^5.10.0",
        "@types/node": "^12.7.12",
        "@types/react": "^16.9.5",
        "@types/react-dom": "^16.9.1",
        "@types/react-loadable": "^5.5.1",
        "@types/react-redux": "^7.1.4",
        "@types/react-router-dom": "^5.1.0",
        "@types/redux": "^3.6.0",
        "@types/redux-saga": "^0.10.5",
        "@types/styled-components": "^4.1.19",
        "clean-webpack-plugin": "^3.0.0",
        "compression-webpack-plugin": "^3.0.0",
        "copy-webpack-plugin": "^5.0.4",
        "dotenv": "^8.1.0",
        "enzyme": "^3.10.0",
        "enzyme-adapter-react-16": "^1.15.1",
        "html-webpack-plugin": "^3.2.0",
        "html-webpack-template": "^6.2.0",
        "jest": "^24.9.0",
        "lodash.template": ">=4.5.0",
        "svg-inline-loader": "^0.8.0",
        "ts-jest": "^24.1.0",
        "ts-loader": "^6.2.0",
        "typescript": "^3.6.4",
        "typescript-plugin-styled-components": "^1.4.3",
        "uglifyjs-webpack-plugin": "^2.2.0",
        "webpack": "^4.41.0",
        "webpack-bundle-analyzer": "^3.5.2",
        "webpack-cli": "^3.3.9",
        "webpack-dev-server": "^3.8.2",
        "webpack-merge": "^4.2.2",
        "workbox-webpack-plugin": "^4.3.1"
    },
    "dependencies": {
        "@loadable/component": "^5.10.3",
        "connected-react-router": "^6.5.2",
        "react": "^16.10.2",
        "react-dom": "^16.10.2",
        "react-inlinesvg": "^1.1.7",
        "react-loadable": "^5.5.0",
        "react-redux": "^7.1.1",
        "react-router-dom": "^5.1.2",
        "redux": "^4.0.4",
        "redux-saga": "^1.1.1",
        "styled-components": "^4.4.0"
    },
    "jest": {
        "setupFilesAfterEnv": [
            "<rootDir>setupTests.js"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(\\.(spec))\\.ts$",
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/**/*.sc.ts",
            "!src/**/*registerServiceWorker.ts",
            "!src/redux/actions/*",
            "!src/redux/reducers/*"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx"
        ]
    }
}
